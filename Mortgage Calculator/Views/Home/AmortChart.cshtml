
@model IEnumerable<Mortgage_Calculator.Models.AmortTable>

@{
    ViewBag.Title = "AmortChart";
}


@using Mortgage_Calculator.Models;



<div class="text-center">
    <h3 class="dark-grey-text mb-5"><strong>Amortization Table</strong></h3>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Payment No.</th>
            <th scope="col">Payment Amount</th>
            <th scope="col">Interest</th>
            <th scope="col">Principal</th>
            <th scope="col">Balance</th>
             <th scope="col">Extra Payment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.PaymentNo</td>
                <td>@d.displayMAmount</td>
                <td>@d.interest</td>
                <td>@d.DeductedPrincipal</td>
                <td>@d.balance</td>
                <td>@d.extraPayment</td>
            </tr>
        }
    </tbody>
</table>
