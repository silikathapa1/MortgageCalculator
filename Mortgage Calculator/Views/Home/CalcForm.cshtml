@{
    ViewBag.Title = "CalcForm";
}
@using Mortgage_Calculator.Models;


@model Mortgage_Calculator.Models.CalculationView

<div class="text-center">
    <h3 class="dark-grey-text mb-5"></strong></h3>
</div>


<form action="/Home/Index" method="post">

    <div class="form-group row">
        <label class="col-sm-2 col-form-label for="M-amount">Mortgage Amount</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.mortgageAmount)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label for="Interest-rate">Interest Rate</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.interestRate)
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label for="a-period">Amortization Period</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.amortizationPeriod)
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label for="Down-payment">Down Payment</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.downpayment)
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label for="Extra-payment">
            Extra Payment
        </label>
        <div class="col-sm-2">
            @Html.TextBoxFor(m => m.extraPayment)
        </div>
        <div class="col-sm-2">
            @Html.EnumDropDownListFor(m => m.extraPaymentOption, htmlAttributes:

                              new
                              {
                                  @class = "form-control"
                              })
        </div>

    </div>

      <button class="btn btn-primary">Calculate</button>

</form>